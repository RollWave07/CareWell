    .col-md-4.col-xs-12
      .card
        .section-title
          Our Team

        -if @group.picture_url == nil
          %img{src: "http://placehold.it/400x250/f2f2f2/ef5e5a&text=Add+Your+Group+Photo!", class: 'group-photo'}
        -else
          =image_tag(@group.picture_url(:group), :class=>'group-photo')
        .photo-form
          = form_for(@group) do |f|
            - if @group.errors.any?
              #error_explanation
                %h2
                  = pluralize(@group.errors.count, "error")
                  prohibited this picture from being saved:
                %ul
                  - @group.errors.full_messages.each do |msg|
                    %li= msg
            .field
              = f.file_field :picture, :required => true
            .actions
              -if @group.picture_url == nil
                = f.submit "Add Photo", class: "sign-up"
              -else
                = f.submit "Change Photo", class: "sign-up"
              %i.fa.fa-camera.fa-3x.choose-group-photo
        .section-contents.padded.overflow-hidden
          .section-subtitle.clear.padded
            Members
          -@users.each do |user|
            .squarelinks
              =link_to group_user_path(@group, user.id) do
                -if user.picture_url == nil
                  =image_tag("mickey-mouse.jpg", class: "group-user-photo")
                -else
                  =image_tag(user.picture_url(:sq_medium), :class => "group-picture")


/ modal for inviting a new member to the group
#invite-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
        %h4#myModalLabel.modal-title
          Send An Invite To #{@group.name}
        .aside Fill out the form below to send an invitation to a new team member. They will receive a standard email welcoming them to CareWell with a personal message, if you choose to enter one below.
      .modal-body
        = form_tag send_email_path(@group.id) do
          .name_form
            = label_tag(:first_name, "First Name")
            %br/
            = text_field_tag 'first_name', nil, class: 'form-control input-lg'
          .name_form
            = label_tag(:last_name, "Last Name")
            %br/
            = text_field_tag 'last_name', nil, class: 'form-control input-lg'
          .email_form
            = label_tag(:email, "Email")
            %br/
            = text_field_tag 'email', nil, class: 'form-control input-lg'
          .email_form
            = label_tag(:message, "Personalized message")
            %br/
            = text_area_tag 'message', nil, placeholder: "Hi Joe, I'm glad we talked about dad and I think I could really use your help from time to time. Our family is using CareWell, a service to automate some of the back and forth regarding care tasks.  I'd love it if you could specifically do x,y, and z.  The system will follow up with you so I don't bother you.", size: "75x5", class: 'form-control input-lg'
          %div
            = hidden_field_tag 'inviter', current_user
          .modal-footer
            = submit_tag "Invite", class: 'btn btn-primary'
            %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
      / /.modal-content
    / /.modal-dialog
  / /.modal


