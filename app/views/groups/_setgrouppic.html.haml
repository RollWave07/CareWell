= form_for(@group) do |f|
  - if @group.errors.any?
    #error_explanation
      %h2
        = pluralize(@group.errors.count, "error")
        prohibited this picture from being saved:
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :Edit_Group_Picture, "Edit Group Picture"
    %br/
    = f.file_field :picture, :required => true
    %br/
  .actions
    = f.submit