:javascript
  var ctx = document.getElementById("barChart").getContext("2d");

  var data = {
    labels : ["getting places","around the home","shopping","meals", "personal care", "odds & ends", "visits & outings"],
    datasets : [
      {
        fillColor : "rgba(141,48,57,0.5)",
        strokeColor : "rgba(64,9,15,1)",
        pointColor : "rgba(64,9,15,1)",
        pointStrokeColor : "rgba(64,9,15,1)",
        data: #{@counts_arrays}
      }
    ]
  }

  var options = {
  //Options for displaying chart data, see http://www.chartjs.org/docs/ for more info

  //Boolean - If we want to override with a hard coded scale
  scaleOverride : true,
  
  //Number - The number of steps in a hard coded scale
  scaleSteps : 1,
  
  //Number - The value jump in the hard coded scale
  scaleStepWidth : 1,
  
  //Number - The scale starting value
  scaleStartValue : 0,
  }

  new Chart(ctx).Bar(data,options);