!!!
%html
  %head
    %title Carewell
    = stylesheet_link_tag "application", media: "all"
    = csrf_meta_tags
  %body
    .container
      %nav.navbar-inverse.navbar-top{:role=>"navigation"}
        %div.navbar-brand
          = link_to image_tag('carewell-logo.gif'), root_url
        %ul.nav.navbar-nav
          -if current_user
            -if current_user.group != nil && user_signed_in?
              %li.navbar-links.navbar-right
                = link_to 'Sign out', destroy_user_session_path, method: :delete
              %li.navbar-link.navbar-right
                = link_to 'Edit Profile', edit_user_registration_path
            -else
              %li.navbar-links.navbar-right
                = link_to "Create New Group", new_user_registration_path
              %li.navbar-links.navbar-right
                = link_to "Sign in", new_user_session_path
    .container
      - unless notice.blank?
        .notice
          %p= notice
      - unless alert.blank?
        .alert
          %p= alert
      = yield
      = javascript_include_tag "application"
