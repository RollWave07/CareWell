!!!
%html
  %head
    %title Carewell
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    .container 
      .navbar
        %ul.nav
          %li.navbar-brand.navbar-links
            = link_to image_tag('carewell-logo.gif'), root_url 
          -if user_signed_in?
            %li.navbar-links
              = link_to 'Root', root_url
            %li.navbar-links
              = link_to 'GroupsR', root_url
            %li.navbar-links
              = link_to 'TasksR', root_url
            %li.navbar-links
              = link_to 'UpdatesR', root_url
            %li.navbar-links
              = link_to 'LocationsR', root_url
            %li.navbar-links  
              = link_to 'Sign out', destroy_user_session_path, method: :delete
          -else
            %li.navbar-links
              = link_to "Create New Group", new_user_registration_path
            %li.navbar-links
              = link_to "Sign in", new_user_session_path
    .container
      - unless notice.blank?
        .notice
          %p= notice
      - unless alert.blank?
        .alert
          %p= alert
    .container  
      = yield
      = javascript_include_tag "application"
/ .navbar-nav
/ .container
/ .clearfix
/ .navbar-header
/ .navbar-fixed-top{:role => "navigation"}