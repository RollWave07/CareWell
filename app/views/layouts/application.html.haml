!!!
%html
  %head
    %title Carewell
    = stylesheet_link_tag "application", media: "all"
    = csrf_meta_tags
    = javascript_include_tag "application"
    %link{href: 'http://fonts.googleapis.com/css?family=Lato:300,700', rel: 'stylesheet', type: 'text/css'}
    %meta{name: "viewport", content:"width=device-width", 'initial-scale' => 1.0}
  %body
    .navbar
      .navbar-inner
        .container
          %nav.navbar{:role=>"navigation"}
            .navbar-header
              -if current_user
                =link_to image_tag('carewell-green-logo.png', :class=>"logo"),group_tasks_path(current_user.group_id)
                .menu-stats
                  Week of Jan 5th
                  .menu-summary-stats
                    =@counts_arrays.first
                    %i.fa.fa-check-square-o
                  Care Tasks Complete
                  .menu-summary-stats
                    =@duration_week
                    %i.fa.fa-heart-o
                  Hours Caring
              -else
                =link_to image_tag('carewell-green-logo.png', :class=>"logo")

              %button.navbar-toggle.collapsed{type: 'button', 'data-toggle'=> 'collapse', 'data-target' => '#bs-example-navbar-collapse-6', style: 'color: white;'}
                %span.sr-only Toggle Navigation
                Menu

            .navbar-collapse.collapse{id: 'bs-example-navbar-collapse-6'}
              -if current_user
                %ul.nav.navbar-nav.pull-right
                  -if current_user.group != nil && user_signed_in?
                    %li.navbar-link
                      = link_to 'Tasks', group_tasks_path(current_user.group_id), {class: nav_links_class("index", "tasks")}
                    %li.navbar-link
                      = link_to 'Team', group_path(current_user.group_id), {class: nav_links_class("show", "groups")}
                    %li.navbar-link
                      = link_to 'Profile', group_user_path(current_user.group_id, current_user.id), {class: nav_links_class("show", "users")}
                    %li.navbar-link.last
                      = link_to 'Sign Out', destroy_user_session_path, method: :delete
                  -else
                    %li.navbar-link
                      = link_to "Sign in", new_user_session_path
    -if flash[:notice]
      = content_tag :div, flash[:notice], class: "alert alert-success"
    -if flash[:alert]
      = content_tag :div, flash[:alert], class: "alert alert-warning"
    -if flash[:error]
      = content_tag :div, flash[:error], class: "alert alert-danger"
    = yield
