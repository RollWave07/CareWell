.row
  .cols-md-12
    =form_for [@group, @task] do |task|
      =task.text_field :title, placeholder: "What do you need?", :class => 'input-lg'
      %span.pick-categories.glyphicon.glyphicon-th
      .col-xs-2.pick-icon
        %span.glyphicon.glyphicon-time
      .col-xs-10.time-details
        %h3 When?
      .col-xs-2.calendar
        %span.pick-calendar-date.glyphicon.glyphicon-calendar
      .col-xs-10.time-details
        =task.select :task_date, options_for_select([['today', 15], ['tomorrow', 30], ['a couple of days', 45], ['in a week', 60], ['in two weeks', 75], ['in a month', 90], ['2 hours', 120]]), {selected: 'in a week' }, {class: 'form-control'}
      .col-xs-12
        %h3 When does it start?
        %p=task.select :start_time, options_for_select([['in the morning', 'in the morning'], ['in the afternoon', 'in the afternoon'], ['in the evening', 'in the evening']]), {selected: 'in the morning'}, {class: 'form-control'}
      .col-xs-12
        %h3 How long will it take?
        %p=task.select :duration, options_for_select([['15 minutes', 15], ['30 minutes', 30], ['45 minutes', 45], ['1 hour', 60], ['75 minutes', 75], ['an hour and a half', 90], ['2 hours', 120]]), {selected: '30 minutes'}, {class: 'form-control'}
      .col-xs-2.pick-icon
        %span.glyphicon.glyphicon-map-marker
      .col-xs-10
        %h3 Where?
        %p=task.text_field :location, placeholder: "Home", class: 'input-lg'

      .col-xs-2
        %span.glyphicon.glyphicon-list
      .col-xs-10
        %h3 Any additional details or preferences?
        %p=task.text_area :information, placeholder: "Any details or preferences to add?", rows: 4, class: 'form-control'






        /
          %h3 What type of task is this?
          .row
            .col-md-3
              .task-form-icon-wrapper
                %i.fa.fa-truck.form-icon
                %br
                =task.label(:getting_places, "getting places")
                %br
                =task.radio_button(:category, "getting places", :class => "task-form-radio-button")
            .col-md-3
              .task-form-icon-wrapper
                %i.fa.fa-home.form-icon
                %br
                =task.label(:around_home, "around the home")
                %br
                =task.radio_button(:category, "around the home", :class => "task-form-radio-button")
            .col-md-3
              .task-form-icon-wrapper
                %i.fa.fa-shopping-cart.form-icon
                %br
                =task.label(:shopping, "shopping")
                %br
                =task.radio_button(:category, "shopping", :class => "task-form-radio-button")
            .col-md-3
              .task-form-icon-wrapper
                %i.fa.fa-cutlery.form-icon
                %br
                =task.label(:meals, "meals")
                %br
                =task.radio_button(:category, "meals", :class => "task-form-radio-button")
          .row
            .col-md-3
              .task-form-icon-wrapper
                %i.fa.fa-stethoscope.form-icon
                %br
                =task.label(:personal_care, "personal care")
                %br
                =task.radio_button(:category, "personal care", :class => "task-form-radio-button")
            .col-md-3
              .task-form-icon-wrapper
                %i.fa.fa-wrench.form-icon
                %br
                =task.label(:odds_and_ends, "odds & ends")
                %br
                =task.radio_button(:category, "odds & ends", :class => "task-form-radio-button")
            .col-md-3
              .task-form-icon-wrapper
                %i.fa.fa-users.form-icon
                %br
                =task.label(:visits_and_outings, "visits & outings")
                %br
                =task.radio_button(:category, "visits & outings", :class => "task-form-radio-button")



      =task.submit :class => "btn new-task-button"
