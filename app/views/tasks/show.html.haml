.container
  .row.link
    =link_to group_tasks_path(@group) do
      .back
        .arrow-left
        %h1.back-words Back
  .row
    .col-md-4
      =render 'tasks/task_show', group: @group, task: @task

    .col-md-8
      -@task.ordered_updates.each do |update|
        =render "updates/update", update: update

      =render "updates/form", task: @task, update: @update



