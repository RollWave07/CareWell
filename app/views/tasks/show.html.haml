.container
  .row
    %h1.task-show
      =@task.title
    %p
      -if @task.task_date
        =@task.task_date.strftime('%A, %B %e, %Y')
    -if @task.information != nil
      .details-header
        Details
      %p
        =@task.information
    %h4 Comments

    .updates{"data-id" => "#{@task.id}"}
      -@task.ordered_updates.each do |update|
        =render "updates/update", update: update
    .row
      .col-md-3
      .col-md-6
        =render "updates/form", task: @task, update: @update
      .col-md-3



