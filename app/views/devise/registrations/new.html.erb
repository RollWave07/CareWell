<div class="row">
  <div class="col-md-12">
    <h2>Creating an account? You made the right choice. Create your account. This should be your, the caregiver's, information.</h2>


    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <%= render "devise/registrations/form", f: f %>
      
      <div><%= f.label :password %><br />
      <%= f.password_field :password %></div>

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %></div>
      
      <div>
        <% if params[:group_id] %>
          <%= f.hidden_field :group_id, value: params[:group_id] %>
        <% end %>
      </div>

      <div><%= f.submit "Sign up" %></div>  

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
