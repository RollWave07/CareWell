
<%if params[:group_id] %>
 <h3> Welcome to your group, <%= Group.find(params[:group_id]).name %></h3>
<%else%>
<div><%=label_tag "Group Name" %>
   <%=text_field_tag :group_name %>
 </div>
 <%end%>

<div><%= f.label :first_name %><br />
<%= f.text_field :first_name, :autofocus => true, value: params[:first_name] %></div>

<div><%= f.label :last_name %><br />
<%= f.text_field :last_name, :autofocus => true, value: params[:last_name] %></div>

<div><%= f.label :phone %><span class="phone_info">Why this?</span><br />
<%= f.text_field :phone, placeholder: "858-886-9929", :autofocus => true %></div>

<%= f.label :picture %><br>
<!-- Removing require -->
<%= f.file_field :picture %><br><br>

<div><%= f.label :email %><br />
<%= f.text_field :email, :autofocus => true, value: params[:email] %></div>

<!-- Added hidden fields so user doesn't have to fill them in. -->
<%= f.hidden_field :role, value: 'caregiver' %>
<%= f.hidden_field :admin, value: true %>

<!-- Add some styles for the phone information hover.  Not sure where to put this given it being a devise controller (which css file touches this?) -->
<style>
  div {
    margin-bottom: 15px;
  }
  .phone_info {
    text-decoration: underline;
    color: blue;
    padding-left: 40px;
  }

</style>



