%section
  .introduction
    .container
      .row
        .col-md-2
        .col-md-8
          %h1.main-statement
            A simple way for families and friends to care for one another.
        .col-md-2
      .row
        .col-md-2
        .col-md-8.family
          =image_tag('family-final.png')
        .col-md-2
%section
  .registration-section
    .container
      .row
        .col-xs-4.col-sm-2.col-md-3
        .col-xs-12.col-sm-8.col-md-6
          .sign-up-login
            Register now to get started.
          .register-form
            =form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
              = devise_error_messages!
              =text_field_tag :group_name, nil, placeholder: "Who are you caring for?", autofocus: true, class: 'form-control input-lg'
              =f.text_field :first_name, placeholder: "What's your first name?", value: params[:first_name], class: 'form-control input-lg'
              =f.email_field :email, placeholder: "email", value: params[:email], class: 'form-control input-lg'
              =f.hidden_field :role, value: 'caregiver'
              =f.hidden_field :admin, value: true
              =f.password_field :password, placeholder: "Password", class: 'form-control input-lg'
              =f.submit "Sign Up", class: 'register-button'
        .col-xs-4.col-sm-2.col-md-3